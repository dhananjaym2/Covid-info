<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chatMsgParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/marginTopForListItem"
    android:background="@android:color/white"
    >

  <TextView
      android:id="@+id/textViewChatMsg"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/paddingOfMsgInList"
      android:text="@string/app_name"
      android:textSize="@dimen/textSizeOfMsgInListItem"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
  <!--  android:background="@drawable/solid_rectangle_with_rounded_corners"-->

</androidx.constraintlayout.widget.ConstraintLayout>